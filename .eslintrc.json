{
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "semi": ["error", "always"],
    "react/prop-types": ["off"],
    "no-irregular-whitespace": 0,
    "no-undef": ["warn"],
    "react/jsx-uses-react": "off",
    "react/react-in-jsx-scope": "off",
    "@typescript-eslint/naming-convention": [
      "error",
      {
        "selector": "parameter",
        "format": ["camelCase"],
        "custom": {
          "regex": "send|start|find",
          "match": false
        }
      },
      // これはルール化した方がよいか検討中
      // {
      //   "selector": "typeAlias",
      //   "format": ["PascalCase"]
      // }
    ]
  }
}
